<html>
<body>
  <div class="adminnew">
  <h1> Add a job </h1>

<%= simple_form_for [:admin,@job] do |f| %>

  <%= f.input :title %>
  <%= f.input :description %>
  <%= f.input :wage_lower_bound, :label => "薪资下限" %>
  <%= f.input :wage_upper_bound, :label => "薪资上限" %>
  <%= f.input :contact_email %>
  <%= f.input :is_hidden %>

  <%= f.submit "Submit", :class => "btn btn-warning" %>
<% end %>
</div>
</body>
<style>
.adminnew{
  height: 550px;
}
body{
